[Unit]
Description=MySQL Check
After=network.target

[Service]
Type=simple
User={{ mysql_check_user }}
Group={{ mysql_check_group }}
EnvironmentFile=-{{ mysql_check_home }}/conf/mysql-check.config
ExecStart={{ mysql_check_home }}/bin/mysql-check
ExecStop=/bin/kill -s QUIT $MAINPID

[Install]
WantedBy=multi-user.target
